  body { font-family: Arial, sans-serif; }
  .gallery-container { display: flex; flex-wrap: wrap; gap: 10px; padding: 10px; }
  .gallery-item { width: calc(100%/3 - 20px); cursor: pointer; }
  .gallery-item img { width: 100%; height: auto; border-radius: 8px; }
  .modal { display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgba(0, 0, 0, 0.8); }
  .modal-content { margin: 10% auto; padding: 20px; width: 80%; }
  .modal-content img { width: 100%; height: auto; }
  .close { color: #aaa; float: right; font-size: 28px; font-weight: bold; }
  .close:hover, .close:focus { color: black; text-decoration: none; cursor: pointer; }
